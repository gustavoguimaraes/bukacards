<%= form_for @flashcard do |f| %>
	<div class="row">
		<div class="small-5 columns">
			<%= f.label :front %>
			<%= f.text_area :front %>
		</div>
		<div class="small-4 columns">
			<%= f.label :deck_id %>
			<%= f.select :deck_id, @current_user.decks.collect { |a| [a.name, a.id]} %>
		</div>
		<div class="small-3 columns"></div>
	</div>
	<div class="row">
		<div class="small-5 columns">
			<%= f.label :back %>
			<%= f.text_area :back %>
		</div>
		<div class="small-7 columns"></div>
	</div>
	<div class="row">
		<p class="small-12 columns"><%= f.submit class: "button" %></p>
	</div>
<% end %>
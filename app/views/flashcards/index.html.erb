<div class="row">
    <div class="large-12 columns">
		<h3>Flashcard Manager</h3>
		<% if @decks.count < 1 %>
      <%=link_to "Please Create a Deck First", decks_path, class: "button alert"%>
      <% end %>
		<%= render 'form' %>
		<table width="100%">
			<thead>
				<tr>
					<th>Deck</th>
					<th>Front</th>
					<th>Back</th>
					<th>Due</th>
					<th>Tools</th>
				</tr>
			</thead>

      <% if @flashcards.count < 1 %>
      <tr><td colspan="3">No flashcards created.</td></tr>
      <% end %>

			<% for flashcard in @flashcards %>
			<tr id="flashcard_<%= flashcard.id %>">
				<td><%= flashcard.deck.name %></td>
				<td><%= flashcard.front %></td>
				<td><%= flashcard.back %></td>
				<td><%= flashcard.due_in %></td>
				<td>
					<%= link_to 'Edit', edit_flashcard_path(flashcard), class: "button success tiny" %>
					<%= link_to 'Delete', flashcard, class: "button tiny alert", method: :delete, remote: true %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>